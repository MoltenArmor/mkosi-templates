#!/bin/sh
set -uex

[ ! -e "/etc/inittab" ] && cp /usr/share/sysvinit/inittab /etc/inittab

sed -i "s#^pf::powerwait.*#pf::powerwait:/sbin/poweroff#" /etc/inittab

# Fix for `/run/nologin`
sed -i "/^#DELAYLOGIN=.*$/s/^.*$/DELAYLOGIN=yes/" /etc/default/rcS

# Fix for `swapon -a` failure
echo "# This is a stub file" > /etc/fstab
